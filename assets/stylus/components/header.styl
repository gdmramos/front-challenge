header
  box-shadow $box-shadow
  display flex
  justify-content space-between
  padding 32px 16px
  position relative
  h1
    font-size 1rem
    font-weight 800
  a
    align-items center
    display flex
    font-weight 600
    ion-icon
      margin-right 8px
  +above(768px)
    padding 24px 64px
    h1
      font-size 1.5rem
.dark
  header
    background-color $dark-blue
    box-shadow $box-shadow-dark
