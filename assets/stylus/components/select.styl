.v-select
  &.vs--open,
  .vs__search,
  .vs__selected
    font-family 'Nunito Sans'
    font-size 14px
    font-weight: 600
  .vs__dropdown-toggle
    border none
    box-shadow: $box-shadow
    padding 14px 24px
  .vs__dropdown-menu
    border none
    box-shadow $box-shadow
    top calc(100% + 8px)
    .vs__dropdown-option--highlight
      background $dark-grey
